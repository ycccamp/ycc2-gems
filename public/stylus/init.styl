@font-face
    font-family Roboto
    src url(/fonts/Roboto-Regular.ttf)

:root
    // Color theme is based on https://material.io/resources/color/#!/?view.left=0&view.right=0&primary.color=03A9F4&secondary.color=EEEEEE
    // And combine with apple design guideliness color for component.
    --primary #03a9f4
    --primary-light #67daff
    --primary-dark #007ac1
    --secondary #efeff4
    
    --text #333
    --text-on-primary #333
    --fade #777

    --shadow-0 0 2px 4px alpha(#000, .1)
    --shadow-1 0 4px 8px alpha(#000, .15)
    --shadow-2 0 6px 12px alpha(#000, .15)

    --transition-fast .15s ease-out
    --transition-medium .2s ease-out
    --transition-slow .25s ease-out

    --background #fff
    --link #007aff
    --border #e5e5e5
    --preload #f1f1f1

    --sidebar-width 240px

*
    font-family Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    box-sizing border-box

body
    margin 0