#facebook-login
    appearance none
    display flex
    flex-direction row
    justify-content center
    align-items center
    color #fff
    border 0
    padding 8px 16px
    background-color #1777f2 // Extracted from Facebook's F5 design
    outline none
    border-radius 4px

    & > .icon
        width 28px
        height 28px
        padding 2px

    & > .detail
        font-size 18px
        font-weight bold
        color #fff // Hard-coded since provided by Facebook not the theme 
        margin 0 8px
        font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif