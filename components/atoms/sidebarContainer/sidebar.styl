#sidebar
    position absolute
    top 0
    left 0
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
    width var(--sidebar-width)
    height 100vh
    background-color #f9f9f9

    & > .area
        display flex
        flex-direction column
        justify-content space-between
        align-items flex-start
        width 240px
