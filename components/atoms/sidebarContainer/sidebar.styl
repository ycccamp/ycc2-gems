#sidebar
    position fixed
    z-index 90
    top 0
    left 0
    display none
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
    width var(--sidebar-width)
    height 100vh
    background-color #f9f9f9
    transition left var(--transition-medium)

    & > .area
        display flex
        flex-direction column
        justify-content space-between
        align-items flex-start
        width 100%

    @media screen and (max-width 567.9px)
        width 270px

        &.-hidden
            left -270px